<resources>
    <style name="BaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/gray_bg</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarSize">@dimen/action_bar_size</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarTitleTextStyle</item>
        <item name="android:actionBarItemBackground">@drawable/selector_action_item_bg</item>
    </style>
    <style name="AppTheme" parent="@style/BaseTheme">
        <item name="android:homeAsUpIndicator">@drawable/icon_back</item>
    </style>
    <style name="OverlayActionBar" parent="@style/BaseTheme">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>
    <style name="NoUpIndicator" parent="@style/BaseTheme"></style>
    <style name="Fullscreen" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>
    <style name="ActionBarTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ActionButton" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
    </style>
    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_bg_color</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="android:displayOptions">homeAsUp|showCustom</item>
    </style>
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <!-- 吐司类对话框样式 -->
    <style name="toastDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item><!-- 设置为浮动窗口 -->
        <item name="android:windowFrame">@null</item><!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item><!-- 设置无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 设置屏幕变暗 -->
    </style>


    <style name="goods_btn_style">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_title_color</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="goods_switch_btn_style" parent="goods_btn_style">
        <item name="android:background">@drawable/goods_btn_bg</item>
        <item name="android:button">@null</item>
    </style>

    <style name="goods_drop_down_btn_style" parent="goods_btn_style">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:background">#fff6f6f6</item>
        <item name="android:drawableRight">@drawable/triangle</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>



    <style name="order_detail_content_item_style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/order_detail_content_item_bg</item>
    </style>
    <style name="order_detail_content_item_text_style">
        <item name="android:text">测试文本</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_73</item>
    </style>
    <style name="order_detail_content_item_title_text_style" parent="order_detail_content_item_text_style">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="order_detail_content_item_content_text_style" parent="order_detail_content_item_text_style">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
</resources>
