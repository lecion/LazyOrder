<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <!-- ActionBar的样式 -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_bg_color</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:dropDownListViewStyle">@android:style/Widget.Holo.ListView.DropDown</item>
    </style>

    <!--ActionBar列表式导航的样式 -->
    <style name="MyDropDownNav" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:background">@android:color/holo_green_light</item>
        <item name="android:popupBackground">@android:color/holo_blue_light</item>
        <item name="android:dropDownSelector">@android:color/holo_orange_light</item>
    </style>
    <!-- 自定义activity退出和进入时的动画 -->
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/zoom_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/zoom_exit</item>
    </style>


    <!-- 吐司类对话框样式 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item><!-- 设置为浮动窗口 -->
        <item name="android:windowFrame">@null</item><!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item><!-- 设置无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 设置屏幕变暗 -->
    </style>


    <style name="goods_btn_style">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_title_color</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="goods_switch_btn_style" parent="goods_btn_style">
        <item name="android:background">@drawable/goods_btn_bg</item>
        <item name="android:button">@null</item>
    </style>

    <style name="goods_drop_down_btn_style" parent="goods_btn_style">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:background">#fff6f6f6</item>
        <item name="android:drawableRight">@drawable/triangle</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>



    <style name="order_detail_content_item_style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/order_detail_content_item_bg</item>
    </style>
    <style name="order_detail_content_item_text_style">
        <item name="android:text">测试文本</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/order_detail_text_color</item>
    </style>
    <style name="order_detail_content_item_title_text_style" parent="order_detail_content_item_text_style">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="order_detail_content_item_content_text_style" parent="order_detail_content_item_text_style">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
</resources>
