    <style name="goods_btn_style">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_title_color</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="goods_switch_btn_style" parent="goods_btn_style">
        <item name="android:background">@drawable/goods_btn_bg</item>
        <item name="android:button">@null</item>
    </style>
    
    <style name="goods_drop_down_btn_style" parent="goods_btn_style">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:background">#fff6f6f6</item>
        <item name="android:drawableRight">@drawable/triangle</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

</resources>
