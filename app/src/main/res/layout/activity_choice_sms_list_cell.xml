<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_cell"
    android:orientation="vertical"
    android:padding="@dimen/content_padding">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_sms_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王宏"
            android:textSize="14sp"
            android:textColor="@color/text_dark_gray_color"/>
        <TextView
            android:id="@+id/tv_sms_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="2014-12-3 19:48:23"
            android:textSize="14sp"
            android:textColor="@color/text_light_gray_color"/>

        <TextView
            android:id="@+id/tv_sms_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_sms_date"
            android:layout_marginRight="10dp"
            android:text="18883284880"
            android:textSize="14sp"
            android:textColor="@color/text_dark_gray_color"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="10dp"
        android:src="#D5D5D5" />
    <TextView
        android:id="@+id/tv_sms_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="6"
        android:text="这是短信内容"
        android:textSize="12sp"
        android:textColor="@color/text_light_gray_color"/>
</LinearLayout>
