<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawe_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext="com.cisoft.lazyorder.ui.main.MainActivity">

    <FrameLayout
        android:id="@+id/drawer_menu_item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment android:id="@+id/drawer_menu_fragment"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.cisoft.lazyorder.ui.main.DrawMenuFragment"
        tools:layout="@layout/fragment_drawer_menu" />

</android.support.v4.widget.DrawerLayout>
