<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    android:padding="@dimen/content_margin">

    <EditText
        android:id="@+id/et_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height"
        android:layout_marginTop="5.0dip"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:singleLine="true"
        android:textColor="#ff555555"
        android:textColorHint="#ff888888"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height"
        android:layout_marginTop="@dimen/content_margin"
        android:background="@drawable/text_field_grey"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_input_code"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:hint="验证码"
            android:singleLine="true"
            android:textColor="#ff555555"
            android:textColorHint="#ff888888"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/btn_obtain_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/content_padding"
            android:paddingRight="@dimen/content_padding"
            android:text="获取验证码"
            android:background="@drawable/selector_blue_corners_button" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sure_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/selector_green_corners_button"
        android:gravity="center"
        android:text="确认并登录"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>