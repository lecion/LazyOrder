<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    tools:mContext="com.cisoft.lazyorder.ui.account.login.LoginActivity"
    android:padding="@dimen/content_margin">

    <EditText
        android:id="@+id/et_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height"
        android:layout_marginTop="@dimen/content_margin"
        android:padding="@dimen/content_padding"
        android:background="@drawable/text_field_grey"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:textColor="@color/text_edit_color"
        android:textColorHint="@color/text_edit_hint_color"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height"
        android:layout_marginTop="@dimen/content_margin"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_input_code"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/cell_height"
            android:layout_weight="1.0"
            android:padding="@dimen/content_padding"
            android:background="@drawable/text_field_grey"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/text_edit_color"
            android:textColorHint="@color/text_edit_hint_color"
            android:textSize="16.0sp" />
        <Button
            android:id="@+id/btn_obtain_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/content_padding"
            android:paddingRight="@dimen/content_padding"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/selector_red_corners_button" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sure_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/selector_red_corners_button"
        android:gravity="center"
        android:text="确认并登录"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>