<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/material_16"
    android:paddingBottom="@dimen/material_16"
    >
    <ImageView
        android:id="@+id/iv_goods_img"
        android:src="@drawable/ic_launcher"
        android:layout_width="@dimen/material_72"
        android:layout_height="@dimen/material_56"
        android:layout_marginLeft="@dimen/material_16"
        />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名称"
        android:layout_toRightOf="@id/iv_goods_img"
        android:layout_alignTop="@id/iv_goods_img"
        android:layout_marginLeft="@dimen/material_16"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_goods_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月销量："
        android:layout_toRightOf="@id/iv_goods_img"
        android:layout_alignBottom="@id/iv_goods_img"
        android:layout_alignLeft="@id/tv_goods_name"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tv_goods_sales_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8787"
        android:layout_toRightOf="@id/tv_goods_sales"
        android:layout_alignTop="@id/tv_goods_sales"
        android:textSize="12sp"
        android:numeric="integer"
        />

    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥99"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_goods_name"
        android:layout_marginRight="@dimen/material_16"
        />

    <Button
        android:id="@+id/btn_goods_status"
        android:layout_width="@dimen/material_72"
        android:layout_height="@dimen/material_32"
        android:text="正在销售"
        android:layout_alignBottom="@id/iv_goods_img"
        android:layout_marginRight="@dimen/material_16"
        android:textSize="11sp"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>