<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar的样式 -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_bg_color</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:dropDownListViewStyle">@android:style/Widget.Holo.ListView.DropDown</item>
    </style>

    <!--ActionBar列表式导航的样式 -->
    <style name="MyDropDownNav" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:background">@android:color/holo_green_light</item>
        <item name="android:popupBackground">@android:color/holo_blue_light</item>
        <item name="android:dropDownSelector">@android:color/holo_orange_light</item>
    </style>

    <!--商品按钮样式-->
    <style name="goods_btn_style">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_title_color</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="goods_switch_btn_style" parent="goods_btn_style">
        <item name="android:background">@drawable/goods_btn_bg</item>
        <item name="android:button">@null</item>
    </style>

    <style name="goods_drop_down_btn_style" parent="goods_btn_style">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:background">#fff6f6f6</item>
        <item name="android:drawableRight">@drawable/triangle</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginRight">@dimen/material_16</item>
        <item name="android:background">@drawable/selector_drop_list_button_bg</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:popupBackground">@android:color/transparent</item>
    </style>




    <!-- 吐司类对话框样式 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item><!-- 设置为浮动窗口 -->
        <item name="android:windowFrame">@null</item><!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item><!-- 设置无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 设置屏幕变暗 -->
    </style>

    <!--订单详情TextView样式-->
    <style name="order_detail_text_view_style">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

</resources>
